cabal-version:       2.4

name:                kafka
version:             0.1.0.0
-- synopsis:
-- description:
-- bug-reports:
license:             BSD-3-Clause
license-file:        LICENSE
author:              Ethan Jones
maintainer:          joneetha@oregonstate.edu
-- copyright:
-- category:
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Combinator
                     , Common
                     , Kafka
                     , KafkaResponse
                     , KafkaWriter
                     , FetchRequest
                     , FetchResponse
                     , ProduceRequest
                     , ProduceResponse
                     , Varint
  ghc-options: -Wall -Werror -O2
  -- other-modules:
  -- other-extensions:
  build-depends:       base ^>=4.12.0.0
                     , castagnoli
                     , sockets >= 0.4.1.0 && < 0.5.0.0
                     , primitive >= 0.7.0.0 && < 0.8.0.0
                     , primitive-convenience >= 0.1 && < 0.2
                     , primitive-unaligned >= 0.1.1.0 && < 0.2.0.0
                     , primitive-unlifted >= 0.1.1.0 && < 0.2.0.0
                     , primitive-slice >= 0.1.0.0 && < 0.2.0.0
                     , byteslice >= 0.1.1.0 && < 0.2.0.0
                     , ip >= 1.5.0
                     , cpu >= 0.1.2 && < 0.2
                     , bytestring
                     , transformers
                     , text
                     , crc32c
                     , attoparsec
                     , containers
                     , mtl >= 2.2.2 && < 2.3
  hs-source-dirs:      src
  default-language:    Haskell2010

executable kafka-exe
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base ^>=4.12.0.0
                     , kafka
                     , sockets >= 0.4.1.0 && < 0.5.0.0
                     , primitive >= 0.7.0.0 && < 0.8.0.0
                     , primitive-unlifted >= 0.1.1.0 && < 0.2.0.0
                     , byteslice >= 0.1.1.0 && < 0.2.0.0
                     , ip >= 1.5.0
                     , bytestring
  hs-source-dirs:      app
  default-language:    Haskell2010
  ghc-options: -Wall -O2 -threaded -rtsopts -with-rtsopts=-N1

test-suite tests
  type:                exitcode-stdio-1.0
  main-is:             Test.hs
  hs-source-dirs:      test
  build-depends:       attoparsec
                     , base ^>=4.12.0.0
                     , bytestring
                     , kafka
                     , primitive >= 0.7.0.0 && < 0.8.0.0
                     , primitive-unlifted >= 0.1.1.0 && < 0.2.0.0
                     , tasty
                     , tasty-golden
                     , tasty-hunit

test-suite benchmark
  type:                exitcode-stdio-1.0
  main-is:             Benchmark.hs
  hs-source-dirs:      test
  build-depends:       base ^>=4.12.0.0
                     , bytestring
                     , gauge
                     , kafka
                     , primitive >= 0.7.0.0 && < 0.8.0.0
                     , primitive-unlifted >= 0.1.1.0 && < 0.2.0.0
  ghc-options: -Wall -O2 -threaded -rtsopts -with-rtsopts=-N1
